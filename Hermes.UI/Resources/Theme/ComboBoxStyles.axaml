<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Design.PreviewWith>
        <Border Padding="20" Width="300" Height="350">
            <!-- Add Controls for Previewer Here -->
            <ComboBox Width="200" Classes="HttpMethodCollection" SelectedIndex="1">
                <ComboBoxItem>GET</ComboBoxItem>
                <ComboBoxItem>POST</ComboBoxItem>
                <ComboBoxItem>PUT</ComboBoxItem>
                <ComboBoxItem>PATCH</ComboBoxItem>
                <ComboBoxItem>DELETE</ComboBoxItem>
                <ComboBoxItem>OPTIONS</ComboBoxItem>
            </ComboBox>
        </Border>
    </Design.PreviewWith>

    <Style Selector="ComboBox.HttpMethodCollection">
        <Style Selector="^ ComboBoxItem:nth-child(1)">
            <Setter Property="Foreground" Value="{DynamicResource HttpMethodGet}" />
        </Style>
        
        <Style Selector="^ ComboBoxItem:nth-child(2)">
            <Setter Property="Foreground" Value="{DynamicResource HttpMethodPost}" />
        </Style>
        
        <Style Selector="^ ComboBoxItem:nth-child(3)">
            <Setter Property="Foreground" Value="{DynamicResource HttpMethodPut}" />
        </Style>
        
        <Style Selector="^ ComboBoxItem:nth-child(4)">
            <Setter Property="Foreground" Value="{DynamicResource HttpMethodPatch}" />
        </Style>
        
        <Style Selector="^ ComboBoxItem:nth-child(5)">
            <Setter Property="Foreground" Value="{DynamicResource HttpMethodDelete}" />
        </Style>
        
        <Style Selector="^ ComboBoxItem:nth-child(6)">
            <Setter Property="Foreground" Value="{DynamicResource HttpMethodOptions}" />
        </Style>
    </Style>
</Styles>
